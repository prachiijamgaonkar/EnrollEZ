<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_task"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dlgTypeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="22sp" />



    <TextView
        android:id="@+id/dlgTypeMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlgTypeTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"
        android:text="Please check your internet connection! try again"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dlgBTypeBtnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dlgTypeMsg"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dlgBTypeBtnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlgTypeMsg"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"/>

</RelativeLayout>